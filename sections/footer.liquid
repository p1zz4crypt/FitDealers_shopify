  /* Estilos para el acordeÃ³n */
  .faq-details {
    border-bottom: 1px solid #374151;
    padding-bottom: 1rem;
    margin-bottom: 1rem;
    transition: all 0.3s ease;
  }

  .faq-summary {
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 1rem;
    color: #ffffff;
    padding: 0.5rem 0;
    list-style: none;
    outline: none;
  }

  .faq-summary::-webkit-details-marker {
    display: none;
  }

  .faq-details[open] .faq-summary {
    color: #FFC800;
  }

  .faq-icon {
    width: 1rem;
    height: 1rem;
    color: #FFC800;
    transition: transform 0.3s ease;
  }

  .faq-details[open] .faq-icon {
    transform: rotate(180deg);
  }

  .faq-content {
    margin-top: 0.5rem;
    color: #D1D5DB;
    font-size: 0.875rem;
    line-height: 1.5;
  }
{%- endstyle -%}

