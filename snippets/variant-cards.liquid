<div class="mb-6">
  <label class="block mb-4 font-semibold text-lg">Selecciona el sabor:</label>

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
    {% for variant in product.variants %}
      <label class="group block border rounded-xl p-4 text-center cursor-pointer hover:shadow-md transition-all duration-200 {% if variant == product.selected_or_first_available_variant %}ring-2 ring-black{% endif %}">
        
        {% if variant.featured_image %}
          <img src="{{ variant.featured_image | image_url: width: 200 }}" alt="{{ variant.title }}" width="200" height="200" class="w-20 h-20 rounded-lg object-contain bg-white p-2 shadow-sm mx-auto mb-2" />

        {% endif %}

        <p class="font-semibold text-base">{{ variant.title }}</p>
        <p class="text-sm text-gray-700">{{ variant.price | money }}</p>

        <input type="radio"
               name="id"
               value="{{ variant.id }}"
               class="sr-only"
               {% if variant == product.selected_or_first_available_variant %}checked{% endif %} />
      </label>
    {% endfor %}
  </div>
</div>