<div class="flex flex-col items-center bg-white rounded-md shadow-sm p-4 text-center">
  <a href="{{ card_product.url }}" class="mb-4 block">
    <img
      src="{{ card_product.featured_image | image_url: width: 600 }}"
      alt="{{ card_product.title | escape }}"
      class="w-full h-auto object-contain rounded"
      width="600"
      height="400"
    >
  </a>

  <h3 class="text-base font-medium text-gray-900 mb-1">
    {{ card_product.title }}
  </h3>

  <div class="text-base mb-3">
    {% if card_product.compare_at_price > card_product.price %}
      <span class="text-black font-semibold">{{ card_product.price | money }}</span>
      <span class="text-gray-400 line-through ml-2">{{ card_product.compare_at_price | money }}</span>
    {% else %}
      <span class="text-black font-semibold">{{ card_product.price | money }}</span>
    {% endif %}
  </div>

  <form method="post" action="{{ routes.cart_add_url }}">
    <input type="hidden" name="id" value="{{ card_product.variants.first.id }}">
    <button
      type="submit"
      class="bg-yellow-400 hover:bg-yellow-500 text-black text-sm font-semibold uppercase px-4 py-2 w-full rounded"
    >
      AÃ±adir al carrito
    </button>
  </form>
</div>
